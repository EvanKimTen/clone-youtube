extends base

block content
    if errorMessage
        span=errorMessage
    img(src="/" + loggedInUser.avatarUrl, width="100", height="100")
    //- Browser didn't recognize what this url is. --> use static function as adding router.
    form(method="POST", enctype="multipart/form-data")
        label(for="avatar") Avatar
        input(type="file", id="avatar", name="avatar", accept="image/*")
        //- value of the accept attribute - only accepts image files
        input(placeholder="Name", name="name", type="text", required, value=loggedInUser.name)
        input(placeholder="Email", name="email", type="email", required, value=loggedInUser.email)
        input(placeholder="Username", name="username", type="text", required, value=loggedInUser.username)
        input(type="submit", value="Update Profile")
        if !loggedInUser.socialOnly
            hr
            a(href="change-password") Change Password &rarr;
        //- input(value="Update Profile", type="submit", disabled)
        //- 2. how to make button clickable again once disabled